{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    // Syntax targetting is handled by ESLint
    "target": "ESNext",
    "lib": [],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "strict": false,
    "skipLibCheck": true,
    "strictBindCallApply": true
  },
  "exclude": ["node_modules", "out", "_site", "docs", ".github"],
  "typedocOptions": {
    "out": "out",
    "entryPoints": ["*/ponyfill.js"],
    "skipErrorChecking": true,
    "plugin": [
      "./my-typedoc-plugin.mjs",
      // "typedoc-plugin-merge-modules",
      "typedoc-plugin-not-exported",
      "typedoc-plugin-mdn-links",
      // "typedoc-theme-hierarchy",
    ],
    // "theme": "hierarchy",
    "navigationLinks": {
      "Guide": "https://corejs.dev/core-js/guide/",
      "Reference": "https://corejs.dev/core-js/reference/",
      "GitHub": "https://github.com/corejs-dev/core-js"
    }
  }
}
